<div class="container">
		<div class="user-detail-body">
            <h2 class="text-center">{{user.name}}</h2>
			<div class="row">
				<div class="col-lg-4">
					<div class="card user-card">
						<div class=" card-body mb-5 pb-4">
							<div class="d-flex flex-column align-items-center text-center">
								<div class="mt-3">
									<h4>{{user.fullname}}</h4>
									<p class="text-secondary mb-1">{{user.roles}}</p>
									<button class="btn btn-primary">Follow</button>
									<button class="btn btn-outline-primary">Message</button>
								</div>
							</div>
							<hr class="my-4">
							<ul class="list-group list-group-flush">
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fa fa-globe"></i> Website</h6>
									<span class="text-secondary">https://website.com</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-github"></i> Github</h6>
									<span class="text-secondary">{{user.username}}</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-twitter"></i> Twitter</h6>
									<span class="text-secondary">@{{user.username}}</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-instagram"></i> Instagram</h6>
									<span class="text-secondary">{{user.username}}</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-facebook"></i> Facebook</h6>
									<span class="text-secondary">{{user.username}}</span>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card user-card">
						<div class="card-body">
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Full Name</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="{{user.fullname}}" disabled>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Username</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="{{user.username}}" disabled>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Email</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="{{user.email}}" disabled>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Phone</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="+84 {{user.phone}}" disabled>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Created at</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" disabled value="{{moment user.createdAt format="HH:mm on DD-MM-YYYY"}}">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Address</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="{{user.address}}" disabled>
								</div>
							</div>
							<div id="edit-btn" class="row" hidden>
								<div class="col-sm-3"></div>
								<div class="col-sm-9 text-secondary">
            						<a href="/user/{{user._id}}/edit"><button type="button" class="btn btn-secondary px-3 save-btn">Edit</button></a>
								</div>
							</div>
						</div>
					</div>
				
				</div>
			</div>
		</div>
	</div>
