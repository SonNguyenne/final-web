<div class="container">
		<div class="user-detail-body">
            <h2 class="text-center">{{userDetail.name}}</h2>
			<div class="row">
				<div class="col-lg-4">
					<div class="card user-card">
						<div class=" card-body mb-5 pb-4">
							<div class="d-flex flex-column align-items-center text-center">
								<div class="mt-3">
									<div class="row">
										 <img class="card-img-top" src="../../{{userDetail.cmndfront}}">
                                    <img  class="card-img-top" src="../../{{userDetail.cmndback}}">
									</div>
									<h4>{{userDetail.fullname}}</h4>
									<p class="text-secondary mb-1">{{userDetail.roles}}</p>
									<button class="btn btn-dark	">Follow</button>
									<button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#exampleModalCenter">
									Edit CMND</button>
								</div>
							</div>
							<hr class="my-4">
							<ul class="list-group list-group-flush">
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fa fa-globe"></i> Website</h6>
									<span class="text-secondary">https://website.com</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-github"></i> Github</h6>
									<span class="text-secondary">{{userDetail.username}}</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-twitter"></i> Twitter</h6>
									<span class="text-secondary">@{{userDetail.username}}</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-instagram"></i> Instagram</h6>
									<span class="text-secondary">{{userDetail.username}}</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-facebook"></i> Facebook</h6>
									<span class="text-secondary">{{userDetail.username}}</span>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card user-card">
						<div class="card-body">
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Full Name</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="{{userDetail.fullname}}" disabled>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Username</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="{{userDetail.username}}" disabled>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Email</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="{{userDetail.email}}" disabled>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Phone</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="+84 {{userDetail.phone}}" disabled>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Created at</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" disabled value="{{moment userDetail.createdAt format="HH:mm on DD-MM-YYYY"}}">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Address</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="{{userDetail.address}}" disabled>
								</div>
							</div>							
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Money</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="{{userDetail.money}}đ" disabled>
								</div>
							</div>
							
							<div id="edit-btn" class="row" hidden>
								<div class="col-sm-3"></div>
							</div>
						</div>
					</div>
				
				</div>
			</div>
		</div>
	</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Đổi Ảnh cá nhân</h5>
        <button type="button" class="btn close" data-dismiss="modal" aria-label="Close">

          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
		<form action="/customer/edit-cmnd" method="post" enctype="multipart/form">
		 <div class="form-group mt-2">
                <label for="cmndfront">CMND Front</label>
                <input class="form-control" type="file" id="cmndfront" name="cmndfront" required>
            </div>
            <div class="form-group mt-2">
                <label for="cmndback">CMND Back</label>
                <input class="form-control" type="file" id="cmndback" name="cmndback" required>
            </div>
		
     	 </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-dark">Save changes</button>
		</form>
      </div>
    </div>
  </div>
</div>